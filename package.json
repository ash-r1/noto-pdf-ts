{
  "name": "noto-pdf-ts",
  "version": "0.0.1",
  "description": "PDF conversion library for Node.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "noto-pdf-ts": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "import": "./dist/lite.js",
      "require": "./dist/lite.cjs"
    },
    "./fonts/noto-cjk": {
      "types": "./dist/fonts/noto-cjk.d.ts",
      "import": "./dist/fonts/noto-cjk.js",
      "require": "./dist/fonts/noto-cjk.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "build": "tsup && pnpm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "test": "vitest",
    "test:ci": "vitest run",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky || true && npm run build",
    "prepublishOnly": "pnpm test:ci && pnpm build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "docs:dev": "cd website && pnpm dev",
    "docs:build": "cd website && pnpm build",
    "docs:preview": "cd website && pnpm preview",
    "docs:install": "cd website && pnpm install"
  },
  "keywords": [
    "pdf",
    "conversion",
    "typescript",
    "node",
    "thumbnail",
    "image",
    "jpeg",
    "png"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.10.5",
    "@types/pngjs": "^6.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pdf-lib": "^1.17.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ash-r1/noto-pdf-ts.git"
  },
  "bugs": {
    "url": "https://github.com/ash-r1/noto-pdf-ts/issues"
  },
  "homepage": "https://github.com/ash-r1/noto-pdf-ts",
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": []
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
