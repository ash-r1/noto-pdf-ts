{
  "name": "noto-pdf-ts-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "PDF conversion library for Node.js - Monorepo",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "build:core": "pnpm --filter @noto-pdf-ts/core build",
    "build:fonts": "pnpm --filter '@noto-pdf-ts/fonts-*' build",
    "test": "pnpm -r --filter './packages/*' test",
    "test:core": "pnpm --filter @noto-pdf-ts/core test",
    "test:ci": "pnpm -r --filter './packages/*' test:ci",
    "lint": "biome lint packages",
    "lint:fix": "biome lint --write packages",
    "format": "biome format --write packages",
    "format:check": "biome format packages",
    "check": "biome check packages",
    "check:fix": "biome check --write packages",
    "typecheck": "pnpm -r --filter './packages/*' typecheck",
    "clean": "pnpm -r --filter './packages/*' clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "download-fonts": "node scripts/download-fonts.js",
    "prepare": "husky || true",
    "docs:dev": "cd website && pnpm dev",
    "docs:build": "cd website && pnpm build",
    "docs:preview": "cd website && pnpm preview",
    "docs:install": "cd website && pnpm install"
  },
  "keywords": [
    "pdf",
    "conversion",
    "typescript",
    "node",
    "thumbnail",
    "image",
    "jpeg",
    "png"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ash-r1/noto-pdf-ts.git"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
